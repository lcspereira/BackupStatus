@model IEnumerable<BackupStatus.Models.Host>

@{
    ViewBag.Title = "Status dos backups";
}

<h2>@ViewBag.Title</h2>

<p>
    <div class="row">
        <form method="get" action=".">
            <div class="pull-right">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar" name="queryName" id="queryName">
                    <div class="input-group-btn">
                        <input type="submit" value="Buscar" class="btn btn-info">
                    </div>
                </div>
            </div>
        </form>
    </div>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastStatusUpdate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="http://@Html.DisplayFor(modelItem => item.Address):8200">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastStatusUpdate)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
